---

import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/react/Header';
import FooterContainer from '@/components/FooterContainer.astro';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description } = Astro.props;
const currentPage = Astro.url.pathname.replace('/', '');
---

<!doctype html>
<html lang="ko">

  <head>
    <BaseHead title={title} description={description ?? "Default Description"} />
  </head>
  <body>
    <Header currentPage={currentPage} />
    <slot />
    <FooterContainer />
  </body>



</html>